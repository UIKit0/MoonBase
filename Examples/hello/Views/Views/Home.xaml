<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:sdk="clr-namespace:System.Windows.Controls"
             MinWidth="400"  MinHeight="150"
             >
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <ContentControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" Content="{Binding Path=ToolbarControl}"/>

    <ScrollViewer Grid.Row="1" Grid.Column="0">
      <StackPanel Orientation="Vertical" Margin="3">
        <Button Content="{Binding Path=TestButtonText}" Command="{Binding Path=TestCommand}"/>
      </StackPanel>
    </ScrollViewer>
    <StackPanel  Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="3">
	  <sdk:DatePicker/>		
    </StackPanel>
  </Grid>
</UserControl>
